{
  "name": "@quincarter/ive-got-this-extension",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:sandbox": "vite --open /sandbox.html",
    "build": "tsc && vite build && vite build --config vite.config.content-script.ts",
    "build:extension": "tsc && vite build && vite build --config vite.config.content-script.ts && echo 'Extension built to dist/'",
    "preview": "vite preview",
    "checkyoself": "yarn lint && yarn format && yarn build && yarn wtr --coverage && yarn test:unit:coverage && yarn test:e2e",
    "test": "wtr && vitest run",
    "test:e2e": "vite build --config vite.config.e2e.ts && playwright test",
    "test:e2e:report": "vite build --config vite.config.e2e.ts && playwright test && tsx scripts/generate-e2e-readme.ts",
    "test:e2e:live": "vite build --config vite.config.e2e.ts && playwright test --config playwright.live.config.ts",
    "test:e2e:live:report": "vite build --config vite.config.e2e.ts && playwright test --config playwright.live.config.ts && tsx scripts/generate-e2e-readme.ts --live",
    "test:unit": "vitest run",
    "test:unit:watch": "vitest watch",
    "test:unit:coverage": "vitest run --coverage",
    "test:wtr": "wtr",
    "test:watch": "wtr --node-resolve --playwright --browsers chromium --watch",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "gen:icons": "tsx scripts/generate-icons-from-svg.ts",
    "changeset:add": "changeset && changeset version",
    "changeset:publish": "changeset publish",
    "version": "tsx scripts/sync-manifest-version.ts && yarn gen:icons",
    "prepare": "husky"
  },
  "dependencies": {
    "effect": "^3.19.17",
    "lit": "^3.3.2"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.8",
    "@eslint/js": "^10.0.1",
    "@esm-bundle/chai": "^4.3.4-fix.0",
    "@open-wc/testing": "^4.0.0",
    "@playwright/test": "^1.58.2",
    "@types/chrome": "^0.1.36",
    "@types/mocha": "^10.0.10",
    "@vitest/coverage-v8": "^4.0.18",
    "@web/dev-server-esbuild": "^1.0.5",
    "@web/test-runner": "^0.20.2",
    "@web/test-runner-playwright": "^0.11.1",
    "eslint": "^10.0.0",
    "globals": "^17.3.0",
    "happy-dom": "^20.6.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.1",
    "tsx": "^4.21.0",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.55.0",
    "vite": "^7.3.1",
    "vite-plugin-static-copy": "^3.2.0",
    "vitest": "^4.0.18"
  },
  "lint-staged": {
    "*.{ts,js,mjs,cjs}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{html,css,md,yml,yaml}": [
      "prettier --write"
    ]
  }
}
